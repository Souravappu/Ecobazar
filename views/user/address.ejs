<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Book</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .nav-item {
            transition: all 0.3s ease;
        }
        .nav-item:hover {
            transform: translateX(10px);
            background-color: rgba(16, 185, 129, 0.1);
        }
        .nav-item.active {
            background: linear-gradient(to right, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.3);
        }
        .address-card {
            transition: all 0.4s ease;
        }
        .address-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }
        main {
            flex-grow: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
        .default-badge {
            position: absolute;
            top: 4px;
            left: 4px;
            background-color: #10b981;
            color: white;
            padding: 2px 6px;
            border-radius: 9999px;
            font-size: 0.6rem;
        }
    </style>
</head>
<body>
    <%- include('../layouts/headerWithoutUser.ejs') %>

    <main class="container mx-auto grid grid-cols-12 gap-20 animate__animated animate__fadeIn p-6">
        <!-- Navigation Sidebar -->
        <div class="col-span-3 bg-white rounded-2xl shadow-2xl p-6 space-y-4">
            <div class="flex items-center space-x-4 mb-8">
                <img src="https://via.placeholder.com/150?text=User+Avatar" 
                     class="w-12 h-12 rounded-full object-cover border-4 border-green-500" 
                     alt="Profile Picture">
                <div>
                    <h3 class="font-bold text-lg"><%= user.fname %> <%= user.lname %></h3>
                    <p class="text-sm text-gray-500">User</p>
                </div>
            </div>
            <nav class="space-y-2">
                <a href="/dashboard" class="nav-item flex items-center p-3 rounded-lg space-x-3 <%= currentPage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-home w-6"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/orders" class="nav-item flex items-center p-3 rounded-lg space-x-3 <%= currentPage === 'orders' ? 'active' : '' %>">
                    <i class="fas fa-shopping-basket w-6"></i>
                    <span>Orders</span>
                </a>
                <a href="/wishlist" class="nav-item flex items-center p-3 rounded-lg space-x-3 <%= currentPage === 'wishlist' ? 'active' : '' %>">
                    <i class="fas fa-heart w-6"></i>
                    <span>Wishlist</span>
                </a>
                
                <a href="/profile" class="nav-item flex items-center p-3 rounded-lg space-x-3 <%= currentPage === 'settings' ? 'active' : '' %>">
                    <i class="fas fa-cog w-6"></i>
                    <span>Settings</span>
                </a>
                <a href="/address" class="nav-item flex items-center p-3 rounded-lg space-x-3 <%= currentPage === 'address' ? 'active' : '' %>">
                    <i class="fas fa-map-marker-alt w-6"></i>
                    <span>Address</span>
                </a>
                <a href="/logout" class="nav-item flex items-center p-3 rounded-lg space-x-3 text-red-500">
                    <i class="fas fa-sign-out-alt w-6"></i>
                    <span>Log Out</span>
                </a>
            </nav>
        </div>

        <!-- Address Content -->
        <div class="col-span-9 space-y-6">
            <!-- Address Card -->
            <div class="card bg-white rounded-2xl shadow-2xl p-6">
                <div class="flex justify-between items-center mb-6 border-b pb-3">
                    <h3 class="text-xl font-semibold flex items-center">
                        <i class="fas fa-map-marker-alt mr-2 text-green-500"></i>
                        Address Book
                    </h3>
                    <a href="/profile/add-address">
                        <button class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-all duration-300 flex items-center space-x-2">
                            <i class="fas fa-plus"></i>
                            <span>Add New Address</span>
                        </button>
                    </a>
                </div>

                <!-- Address List -->
                <div class="grid md:grid-cols-2 gap-6">
                    <% if (addresses && addresses.length > 0) { %>
                        <% addresses.forEach((address) => { %>
                            <div class="address-card bg-white rounded-2xl shadow-lg p-6 relative" data-address-id="<%= address._id %>">
                                <% if (address.isDefault) { %>
                                    <span class="default-badge">Default</span>
                                <% } %>
                                <div class="flex space-x-2 absolute top-4 right-4">
                                    <a href="/profile/edit-address/<%= address._id %>" 
                                       class="edit-address text-blue-500 hover:text-blue-700 transition-colors"
                                       data-address-id="<%= address._id %>">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button 
                                        class="delete-address text-red-500 hover:text-red-700 transition-colors"
                                        data-address-id="<%= address._id %>"
                                    >
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                                <h4 class="text-lg font-semibold text-gray-900 mb-2"><%= address.addressType %> Address</h4>
                                <div class="space-y-1">
                                    <p class="text-gray-600"><%= address.name %></p>
                                    <% if (address.apartment) { %>
                                        <p class="text-gray-600"><%= address.apartment %></p>
                                    <% } %>
                                    <p class="text-gray-600"><%= address.streetAddress %></p>
                                    <p class="text-gray-600"><%= address.city %>, <%= address.state %> <%= address.postalCode %></p>
                                    <p class="text-gray-600">Phone: <%= address.phone %></p>
                                </div>
                                <div class="mt-4 flex justify-between items-center">
                                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs">
                                        <%= address.addressType %>
                                    </span>
                                    <button 
                                        class="set-default-address text-sm text-blue-500 hover:text-blue-700 transition-colors <%= address.isDefault ? 'hidden' : '' %>"
                                        data-address-id="<%= address._id %>"
                                    >
                                        Set as Default
                                    </button>
                                </div>
                            </div>
                        <% }) %> 
                    <% } else { %>
                        <div class="col-span-full text-center py-10 bg-gray-100 rounded-lg">
                            <p class="text-gray-600 text-lg">No addresses found. Add a new address to get started.</p>
                        </div>
                    <% } %>     
                </div>

                <% if (addresses && addresses.length > 0) { %>
                    <div class="mt-8 flex justify-center items-center space-x-4">
                        <% if (pagination.hasPrev) { %>
                            <a href="/address?page=<%= pagination.page - 1 %>" 
                               class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                <i class="fas fa-chevron-left mr-2"></i>
                                Previous
                            </a>
                        <% } %>

                        <div class="flex items-center space-x-2">
                            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                <a href="/address?page=<%= i %>"
                                   class="px-4 py-2 rounded-lg <%= pagination.page === i ? 'bg-green-600 text-white' : 'bg-white border border-gray-300 hover:bg-gray-50' %> transition-colors">
                                    <%= i %>
                                </a>
                            <% } %>
                        </div>

                        <% if (pagination.hasNext) { %>
                            <a href="/address?page=<%= pagination.page + 1 %>"
                               class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                Next
                                <i class="fas fa-chevron-right ml-2"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script>
       document.addEventListener('DOMContentLoaded', () => {
    // Delete Address Functionality
    document.querySelectorAll('.delete-address').forEach(button => {
        button.addEventListener('click', async () => {
            const addressId = button.dataset.addressId;

            const result = await Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this address!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/profile/delete-address/${addressId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    if (!response.ok) {
                        throw new Error('Failed to delete address');
                    }

                    const data = await response.json();

                    if (data.success) {
                        Swal.fire('Deleted!', data.message, 'success');
                        button.closest('.address-card').remove();
                    } else {
                        throw new Error(data.message);
                    }
                } catch (error) {
                    Swal.fire('Error!', error.message, 'error');
                }
            }
        });
    });

    // Set Default Address Functionality
    document.querySelectorAll('.set-default-address').forEach(button => {
    button.addEventListener('click', async () => {
        const addressId = button.dataset.addressId;

        try {
            const response = await fetch(`/profile/set-default-address/${addressId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            if (response.ok) {
                   window.location.reload()
                }
                if (!response.ok) {
                    throw new Error('Failed to set default address');
                }

                const data = await response.json();

                if (data.success) {
                    // Remove previous default badge and button
                    document.querySelector('.default-badge')?.remove();
                    document.querySelector('.set-default-address:not(.hidden)')?.classList.remove('hidden');

                    // Add default badge to current address
                    const addressCard = button.closest('.address-card');
                    addressCard.insertAdjacentHTML('afterbegin', '<span class="default-badge">Default</span>');
                    button.classList.add('hidden');

                    Swal.fire('Success!', data.message, 'success');
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire('Error!', error.message, 'error');
            }
        });
    });
});
    </script>
</body>
</html>