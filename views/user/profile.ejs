<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Settings</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Tailwind Animation Plugin -->
    <script src="https://cdn.jsdelivr.net/npm/tailwindcss-animatecss@1.0.7/dist/tailwindcss-animatecss.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .nav-item {
            transition: all 0.3s ease;
        }
        .nav-item:hover {
            transform: translateX(10px);
            background-color: rgba(16, 185, 129, 0.1);
        }
        .nav-item.active {
            background: linear-gradient(to right, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.3);
        }
        .card {
            transition: all 0.4s ease;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }
        .profile-avatar {
            transition: all 0.3s ease;
        }
        .profile-avatar:hover {
            transform: scale(1.1) rotate(5deg);
        }
        main {
            flex-grow: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <%- include('../layouts/headerWithoutUser.ejs') %>

    <main class="container mx-auto grid grid-cols-12 gap-6 animate__animated animate__fadeIn p-6">
        <!-- Navigation Sidebar -->
        <div class="col-span-3 bg-white rounded-2xl shadow-2xl p-6 space-y-4">
            <div class="flex items-center space-x-4 mb-8">
              <div class="w-12 h-12 rounded-full bg-green-500 flex items-center justify-center text-white text-xl border-4 border-green-200">
                  <i class="fas fa-user"></i>
              </div>
                <div>
                    <h3 class="font-bold text-lg"><%= user.fname %> <%= user.lname %></h3>
                    <p class="text-sm text-gray-500">User</p>
                </div>
            </div>
            <nav class="space-y-2">
                <a href="/profile" class="nav-item active flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-home w-6"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/orders" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-shopping-basket w-6"></i>
                    <span>Orders</span>
                </a>
                <a href="/wishlist" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-heart w-6"></i>
                    <span>Wishlist</span>
                </a>
                <a href="#" class="nav-item flex items-center p-3 rounded-lg space-x-3 ">
                  <i class="fas fa-cog w-6"></i>
                  <span>Settings</span>
              </a>
                <a href="/address" class="nav-item flex items-center p-3 rounded-lg space-x-3 ">
                  <i class="fas fa-map-marker-alt w-6"></i>
                  <span>Address</span>
               </a>
              
                <a href="#" class="nav-item flex items-center p-3 rounded-lg space-x-3 text-red-500">
                    <i class="fas fa-sign-out-alt w-6"></i>
                    <span>Log Out</span>
                </a>
            </nav>
        </div>

        <!-- Profile Content -->
        <div class="col-span-9 space-y-6">
            <!-- Profile Card -->
            <div class="card bg-white rounded-2xl shadow-2xl p-8 grid grid-cols-12 gap-6">
                <div class="col-span-4 flex flex-col items-center justify-center">
                    <div class="w-48 h-48 rounded-full bg-green-500 flex items-center justify-center text-white text-6xl border-8 border-green-200 shadow-lg">
                        <i class="fas fa-user"></i>
                    </div>
                    <h2 class="mt-4 text-2xl font-bold"><%= user.fname || 'First Name' %> <%= user.lname || 'Last Name' %></h2>
                    <p class="text-gray-500"><%= user.role || 'User Role' %></p>
                </div>
                <div class="col-span-8">
                    
                    <h3 class="text-xl font-semibold mb-6 border-b pb-3">Personal Information</h3>
                    <form id="profileForm" method="POST" action="/profile/editProfile/<%= user._id %>">
                        <div class="grid grid-cols-2 gap-6">
                            <!-- First Name -->
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-2">First Name</label>
                                <input type="text" name="fname" value="<%= user.fname || '' %>" 
                                       class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                            </div>
                            <!-- Last Name -->
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-2">Last Name</label>
                                <input type="text" name="lname" value="<%= user.lname || '' %>" 
                                       class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                            </div>
                            <!-- Email Address -->
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-2">Email Address</label>
                                <input type="email" name="email" value="<%= user.email || '' %>" 
                                       class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                            </div>
                            <!-- Phone Number -->
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-2">Phone Number</label>
                                <input type="tel" name="phone" value="<%= user.phone || '' %>" 
                                       class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                            </div>
                            <!-- Save Button -->
                            <div class="col-span-2 mt-4">
                                <button class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-all duration-300 flex items-center justify-center space-x-2">
                                    <i class="fas fa-save"></i>
                                    <span>Save Changes</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>          

            <!-- Address & Security Card -->
            <div class="grid grid-cols-2 gap-6">
                <div class="card bg-white rounded-2xl shadow-2xl p-6">
                    <h3 class="text-xl font-semibold mb-6 border-b pb-3">
                        <i class="fas fa-map-marker-alt mr-2 text-green-500"></i>
                        Shipping Address
                    </h3>
                    <div class="space-y-4">
                        <% if (address) { %>
                        <%address.address.forEach(a=>{%>
                            <%if(a.isDefault){%>
                        <div class="flex items-center space-x-4">
                            <%if(a.addressType==="Home"){%>
                                <i class="fas fa-home text-green-500"></i>
                           <% }else if(a.addressType==="Office"){%>
                            <i class="fas fa-building text-green-500"></i>
                            <% }else if(a.addressType==="Other"){%>
                                <i class="fas fa-archway text-green-500"></i>
                           <% }%>
                            
                            <div>
                          
                                        <p class="font-medium"><%=a.streetAddress%></p>
                                        <p class="text-gray-500"><%=a.city%>  <%=a.postalCode%></p>
                               
                                
                            </div>
                        </div>
                        <button class="bg-green-100 text-green-600 px-4 py-2 rounded-lg hover:bg-green-200 transition-all duration-300">
                          <a href="/address">View Addresses</a>
                        </button>
                        <%}%>
                                  
                        <% })%>
                        <%}else{%>
                        <p>No address found</p>
                        <a href="/profile/add-address">
                            <button class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-all duration-300 flex items-center space-x-2">
                                <i class="fas fa-plus"></i>
                                <span>Add New Address</span>
                            </button>
                        </a>
                        <%}%>
                     
                    </div>
                </div>
                <div class="card bg-white rounded-2xl shadow-2xl p-6">
                    <h3 class="text-xl font-semibold mb-6 border-b pb-3">
                        <i class="fas fa-lock mr-2 text-green-500"></i>
                        Account Security
                    </h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="font-medium">Password</p>
                                <p class="text-gray-500">Last changed: 2 months ago</p>
                            </div>
                            <a href="/change-password" class="bg-green-100 text-green-600 px-4 py-2 rounded-lg hover:bg-green-200 transition-all duration-300">
                                Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../layouts/footer.ejs') %>

    <script>
        // Enhanced Navigation Active State
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelector('.nav-item.active').classList.remove('active');
                this.classList.add('active');
            });
        });

        // Profile Image Preview
        document.getElementById('profileImageInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileImagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>