<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Settings</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .nav-item {
            transition: all 0.3s ease;
        }
        .nav-item:hover {
            transform: translateX(10px);
            background-color: rgba(16, 185, 129, 0.1);
        }
        .nav-item.active {
            background: linear-gradient(to right, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.3);
        }
        .card {
            transition: all 0.4s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }
        main {
            flex-grow: 1;
            padding: 2rem 0;
        }
    </style>
</head>
<body class="bg-gray-50">
    <%- include('../layouts/headerWithoutUser.ejs') %>

    <main>
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-12 gap-6">
                <!-- Navigation Sidebar -->
                <%- include('../layouts/profileSidebar.ejs', { currentPage: 'profile' }) %>

                <!-- Profile Content -->
                <!-- Profile Content -->
<div class="col-span-12 lg:col-span-9 space-y-6">
    <!-- Profile Card -->
    <div class="card bg-white rounded-2xl shadow-2xl p-6 md:p-8">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-8">
            <div class="col-span-12 md:col-span-4 flex flex-col items-center justify-center">
                <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-green-500 flex items-center justify-center text-white text-5xl md:text-6xl border-8 border-green-200 shadow-lg mb-4">
                    <i class="fas fa-user"></i>
                </div>
                <h2 class="text-xl md:text-2xl font-bold text-center">
                    <%= user.fname || 'First Name' %> <%= user.lname || 'Last Name' %>
                </h2>
                <p class="text-gray-500 text-center">
                    <%= user.role || 'User Role' %>
                </p>
            </div>
            <div class="col-span-12 md:col-span-8">
                <h3 class="text-lg md:text-xl font-semibold mb-4 md:mb-6 border-b pb-2 md:pb-3">
                    Personal Information
                </h3>
                <form id="profileForm" method="POST" action="/profile/editProfile/<%= user._id %>">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
                        <!-- First Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">First Name</label>
                            <input type="text" name="fname" value="<%= user.fname || '' %>" 
                                   class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                        </div>
                        <!-- Last Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Last Name</label>
                            <input type="text" name="lname" value="<%= user.lname || '' %>" 
                                   class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                        </div>
                        <!-- Email Address -->
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Email Address</label>
                            <input type="email" name="email" value="<%= user.email || '' %>" 
                                   class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                        </div>
                        <!-- Phone Number -->
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Phone Number</label>
                            <input type="tel" name="phone" value="<%= user.phone || '' %>" 
                                   class="w-full rounded-lg border-2 border-gray-200 focus:border-green-500 transition-all duration-300">
                        </div>
                        <!-- Save Button -->
                        <div class="col-span-1 md:col-span-2 mt-4">
                            <button class="w-full md:w-auto bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition-all duration-300 flex items-center justify-center space-x-2">
                                <i class="fas fa-save"></i>
                                <span>Save Changes</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Address & Security Card -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card bg-white rounded-2xl shadow-2xl p-6">
            <h3 class="text-lg md:text-xl font-semibold mb-4 md:mb-6 border-b pb-2 md:pb-3">
                <i class="fas fa-map-marker-alt mr-2 text-green-500"></i>
                Shipping Address
            </h3>
            <div class="space-y-4">
                <% if (address) { %>
                <% address.address.forEach(a => { %>
                    <% if (a.isDefault) { %>
                    <div class="flex items-center space-x-4">
                        <% if (a.addressType === "Home") { %>
                        <i class="fas fa-home text-green-500"></i>
                        <% } else if (a.addressType === "Office") { %>
                        <i class="fas fa-building text-green-500"></i>
                        <% } else if (a.addressType === "Other") { %>
                        <i class="fas fa-archway text-green-500"></i>
                        <% } %>
                        <div>
                            <p class="font-medium"><%= a.streetAddress %></p>
                            <p class="text-gray-500"><%= a.city %> <%= a.postalCode %></p>
                        </div>
                    </div>
                    <button class="bg-green-100 text-green-600 px-4 py-2 rounded-lg hover:bg-green-200 transition-all duration-300">
                        <a href="/address">View Addresses</a>
                    </button>
                    <% } %>
                <% }) %>
                <% } else { %>
                <p>No address found</p>
                <a href="/profile/add-address">
                    <button class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-all duration-300 flex items-center space-x-2">
                        <i class="fas fa-plus"></i>
                        <span>Add New Address</span>
                    </button>
                </a>
                <% } %>
            </div>
        </div>
        <div class="card bg-white rounded-2xl shadow-2xl p-6">
            <h3 class="text-lg md:text-xl font-semibold mb-4 md:mb-6 border-b pb-2 md:pb-3">
                <i class="fas fa-lock mr-2 text-green-500"></i>
                Account Security
            </h3>
            <div class="space-y-4">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="font-medium">Password</p>
                        <p class="text-gray-500">Last changed: 2 months ago</p>
                    </div>
                    <a href="/change-password" class="bg-green-100 text-green-600 px-4 py-2 rounded-lg hover:bg-green-200 transition-all duration-300">
                        Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
            </div>
        </div>
    </main>

    <%- include('../layouts/footer.ejs') %>

    <script>
        // Enhanced Navigation Active State
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelector('.nav-item.active').classList.remove('active');
                this.classList.add('active');
            });
        });

        // Profile Image Preview
        document.getElementById('profileImageInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileImagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>