<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - Ecobazar</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .nav-item {
            transition: all 0.3s ease;
        }
        .nav-item:hover {
            transform: translateX(10px);
            background-color: rgba(16, 185, 129, 0.1);
        }
        .nav-item.active {
            background: linear-gradient(to right, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 6px rgba(16, 185, 129, 0.3);
        }
        .card {
            transition: all 0.4s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }
        main {
            flex-grow: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <%- include('../layouts/headerWithoutUser.ejs') %>

    <main class="container mx-auto grid grid-cols-12 gap-6 animate__animated animate__fadeIn p-6">
        <!-- Navigation Sidebar -->
        <div class="col-span-3 bg-white rounded-2xl shadow-2xl p-6 space-y-4">
            <div class="flex items-center space-x-4 mb-8">
                <div class="w-12 h-12 rounded-full bg-green-500 flex items-center justify-center text-white text-xl border-4 border-green-200">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h3 class="font-bold text-lg"><%= user.fname %> <%= user.lname %></h3>
                    <p class="text-sm text-gray-500">User</p>
                </div>
            </div>
            <nav class="space-y-2">
                <a href="/profile" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-home w-6"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/orders" class="nav-item active flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-shopping-basket w-6"></i>
                    <span>Orders</span>
                </a>
                <a href="/wishlist" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-heart w-6"></i>
                    <span>Wishlist</span>
                </a>
                <a href="/address" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-map-marker-alt w-6"></i>
                    <span>Address</span>
                </a>
                <a href="#" class="nav-item flex items-center p-3 rounded-lg space-x-3">
                    <i class="fas fa-cog w-6"></i>
                    <span>Settings</span>
                </a>
                <form action="/logout" method="POST" class="block">
                    <button type="submit" class="nav-item flex items-center p-3 rounded-lg space-x-3 text-red-500 w-full">
                        <i class="fas fa-sign-out-alt w-6"></i>
                        <span>Log Out</span>
                    </button>
                </form>
            </nav>
        </div>

        <!-- Orders Content -->
        <div class="col-span-9 space-y-6">
            <div class="card bg-white rounded-2xl shadow-2xl p-8">
                <h2 class="text-2xl font-bold mb-6 border-b pb-4">My Orders</h2>

                <% if (orders && orders.length > 0) { %>
                    <div class="space-y-6">
                        <% orders.forEach(order => { %>
                            <div class="card bg-white rounded-xl border p-6 hover:shadow-xl">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="font-semibold text-lg">Order #<%= order.orderId %></h3>
                                        <p class="text-sm text-gray-500">
                                            Placed on <%= new Date(order.createdAt).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'long',
                                                day: 'numeric'
                                            }) %>
                                        </p>
                                    </div>
                                    <div class="text-right">
                                        <% if (order.orderStatus === 'Cancelled') { %>
                                            <span class="px-4 py-1.5 rounded-full text-sm font-medium bg-red-100 text-red-700">
                                                Cancelled
                                            </span>
                                        <% } else { %>
                                            <span class="px-4 py-1.5 rounded-full text-sm font-medium
                                                <%= order.orderStatus === 'Delivered' ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700' %>">
                                                <%= order.orderStatus %>
                                            </span>
                                        <% } %>
                                        <% if (order.orderStatus === 'Cancelled') { %>
                                            <button onclick="showCancelReason(`<%= order.cancelReason %>`)"
                                                    class="ml-2 text-gray-500 hover:text-gray-700">
                                                <i class="fas fa-info-circle"></i>
                                            </button>
                                        <% } %>
                                        <p class="mt-2 font-bold text-lg">₹<%= order.total %></p>
                                    </div>
                                </div>

                                <div class="border-t pt-4">
                                    <div class="space-y-4">
                                        <% order.items.forEach(item => { %>
                                            <div class="flex items-center gap-4">
                                                <img src="/uploads/products/<%= item.product.images[0].split('/').pop() %>"
                                                     alt="<%= item.product.name %>"
                                                     class="w-20 h-20 object-cover rounded-lg">
                                                <div class="flex-1">
                                                    <h4 class="font-medium"><%= item.product.name %></h4>
                                                    <p class="text-sm text-gray-500">
                                                        Qty: <%= item.quantity %> × ₹<%= item.price %>
                                                    </p>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>

                                <div class="mt-6 flex justify-end">
                                    <a href="/order/<%= order._id %>" 
                                       class="inline-flex items-center text-green-600 hover:text-green-700 transition-colors">
                                        <span class="mr-2">View Details</span>
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-12">
                        <i class="fas fa-shopping-bag text-6xl text-gray-300 mb-4"></i>
                        <h2 class="text-xl font-semibold text-gray-600 mb-4">No orders yet</h2>
                        <a href="/shop" 
                           class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-all duration-300">
                            Start Shopping
                        </a>
                    </div>
                <% } %>

                <% if (orders && orders.length > 0) { %>
                    <div class="mt-8 flex justify-center items-center space-x-4">
                        <% if (pagination.hasPrev) { %>
                            <a href="/orders?page=<%= pagination.page - 1 %>" 
                               class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                <i class="fas fa-chevron-left mr-2"></i>
                                Previous
                            </a>
                        <% } %>

                        <div class="flex items-center space-x-2">
                            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                <a href="/orders?page=<%= i %>"
                                   class="px-4 py-2 rounded-lg <%= pagination.page === i ? 'bg-green-600 text-white' : 'bg-white border border-gray-300 hover:bg-gray-50' %> transition-colors">
                                    <%= i %>
                                </a>
                            <% } %>
                        </div>

                        <% if (pagination.hasNext) { %>
                            <a href="/orders?page=<%= pagination.page + 1 %>"
                               class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                Next
                                <i class="fas fa-chevron-right ml-2"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('../layouts/footer.ejs') %>
</body>
</html> 