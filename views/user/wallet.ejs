<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wallet - Ecobazar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .transaction-item {
            transition: all 0.3s ease;
        }
        .transaction-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .pagination-btn {
            transition: all 0.3s ease;
        }
        .pagination-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-gray-50">
    <%- include('../layouts/headerWithoutUser.ejs') %>

    <main class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-12 gap-6">
            <!-- Sidebar -->
            <div class="col-span-3">
                <%- include('../layouts/profileSidebar.ejs', { currentPage: 'wallet' }) %>
            </div>

            <!-- Main Content -->
            <div class="col-span-9">
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h1 class="text-2xl font-bold mb-6">My Wallet</h1>

                    <!-- Wallet Balance Card -->
                    <div class="bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg p-6 mb-8">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm opacity-80">Available Balance</p>
                                <h2 class="text-3xl font-bold">₹<%= wallet.balance.toFixed(2) %></h2>
                            </div>
                            <!-- <button onclick="showAddMoneyModal()" 
                                    class="bg-white text-green-500 px-6 py-2 rounded-lg hover:bg-green-50 transition-colors font-medium">
                                <i class="fas fa-plus mr-2"></i>Add Money
                            </button> -->
                        </div>
                    </div>

                    <!-- Transaction History -->
                    <div>
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-xl font-semibold">Transaction History</h3>
                            <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                <div class="text-sm text-gray-500">
                                    Showing <%= wallet.transactions.length %> of <%= totalTransactions %> transactions
                                </div>
                            <% } %>
                        </div>

                        <div class="space-y-4">
                            <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                <% wallet.transactions.forEach(transaction => { %>
                                    <div class="transaction-item flex items-center justify-between p-4 border rounded-lg bg-white">
                                        <div class="flex items-center space-x-4">
                                            <div class="<%= transaction.type === 'CREDIT' ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
                                                <i class="<%= transaction.type === 'CREDIT' ? 'fas fa-arrow-down text-green-500' : 'fas fa-arrow-up text-red-500' %>"></i>
                                            </div>
                                            <div>
                                                <p class="font-medium"><%= transaction.description %></p>
                                                <p class="text-sm text-gray-500">
                                                    <%= new Date(transaction.date).toLocaleDateString('en-US', {
                                                        year: 'numeric',
                                                        month: 'short',
                                                        day: 'numeric',
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="<%= transaction.type === 'CREDIT' ? 'text-green-500' : 'text-red-500' %> font-semibold text-lg">
                                            <%= transaction.type === 'CREDIT' ? '+' : '-' %>₹<%= transaction.amount.toFixed(2) %>
                                        </div>
                                    </div>
                                <% }); %>

                                <!-- Pagination -->
                                <% if (pagination.totalPages > 1) { %>
                                    <div class="flex justify-center items-center space-x-2 mt-8">
                                        <% if (pagination.hasPrev) { %>
                                            <a href="?page=<%= pagination.page - 1 %>" 
                                               class="pagination-btn px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700">
                                                <i class="fas fa-chevron-left mr-2"></i>
                                                Previous
                                            </a>
                                        <% } %>

                                        <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                            <a href="?page=<%= i %>" 
                                               class="pagination-btn px-4 py-2 <%= pagination.page === i ? 'bg-green-500 text-white' : 'bg-white text-gray-700 border border-gray-300' %> rounded-lg">
                                                <%= i %>
                                            </a>
                                        <% } %>

                                        <% if (pagination.hasNext) { %>
                                            <a href="?page=<%= pagination.page + 1 %>" 
                                               class="pagination-btn px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700">
                                                Next
                                                <i class="fas fa-chevron-right ml-2"></i>
                                            </a>
                                        <% } %>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div class="text-center py-12 bg-gray-50 rounded-lg">
                                    <i class="fas fa-history text-4xl text-gray-400 mb-4"></i>
                                    <p class="text-gray-500 font-medium">No transactions yet</p>
                                    <p class="text-gray-400 text-sm mt-2">Your transaction history will appear here</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Money Modal -->
    <div id="addMoneyModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 w-96 transform transition-all">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold">Add Money to Wallet</h3>
                <button onclick="hideAddMoneyModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="addMoneyForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Amount (₹)</label>
                    <input type="number" 
                           name="amount" 
                           min="1" 
                           step="1"
                           class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-green-500 focus:border-green-500"
                           required>
                </div>
                <div class="flex justify-end space-x-3">
                    <button type="button" 
                            onclick="hideAddMoneyModal()"
                            class="px-4 py-2 border rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
                        Add Money
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>

    <script>
        function showAddMoneyModal() {
            document.getElementById('addMoneyModal').style.display = 'flex';
            document.querySelector('#addMoneyModal input[name="amount"]').focus();
        }

        function hideAddMoneyModal() {
            document.getElementById('addMoneyModal').style.display = 'none';
        }

        document.getElementById('addMoneyForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const amount = e.target.amount.value;

            try {
                const response = await fetch('/wallet/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ amount })
                });

                const data = await response.json();

                if (data.success) {
                    hideAddMoneyModal();
                    location.reload();
                } else {
                    alert(data.message || 'Error adding money');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error adding money to wallet');
            }
        });

        // Close modal when clicking outside
        document.getElementById('addMoneyModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) {
                hideAddMoneyModal();
            }
        });

        // Handle escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                hideAddMoneyModal();
            }
        });
    </script>
</body>
</html> 