function validateSearch(event) {
    event.preventDefault();
    const searchInput = document.getElementById('searchInput');
    const searchError = document.getElementById('searchError');
    const searchTerm = searchInput.value.trim();
    
    // Reset error state
    searchError.classList.add('hidden');
    searchInput.classList.remove('border-red-500');
    
    // Check if empty or less than 3 characters
    if (!searchTerm || searchTerm.length < 3) {
        searchError.textContent = 'Please enter at least 3 characters to search';
        searchError.classList.remove('hidden');
        searchInput.classList.add('border-red-500');
        return false;
    }
    
    // Regex pattern: only allow letters, numbers, and spaces
    const searchPattern = /^[a-zA-Z0-9\s]{3,}$/;
    if (!searchPattern.test(searchTerm)) {
        searchError.textContent = 'Search can only contain letters, numbers, and spaces';
        searchError.classList.remove('hidden');
        searchInput.classList.add('border-red-500');
        return false;
    }
    
    // If validation passes, submit the form
    document.getElementById('searchForm').submit();
    return true;
}
