            document.body.style.overflow = 'auto';
        }, 300);
    }

    // Event listeners for main buttons
    searchBtn.addEventListener('click', () => showOverlay(searchOverlay));
    categoryBtn.addEventListener('click', () => showOverlay(categoryOverlay));
    menuBtn.addEventListener('click', () => showOverlay(accountOverlay));

    // Event listeners for close buttons
    closeButtons.forEach(button => {
        button.addEventListener('click', () => {
            const overlay = button.closest('.mobile-menu-overlay, .mobile-search-overlay');
            hideOverlay(overlay);
        });
    });

    // Language selector functionality
    const mobileLangSelect = document.getElementById('mobileLangSelect');
    const savedLanguage = localStorage.getItem('selectedLanguage') || 'en';
    mobileLangSelect.value = savedLanguage;

    mobileLangSelect.addEventListener('change', (e) => {
        const selectedLanguage = e.target.value;
        localStorage.setItem('selectedLanguage', selectedLanguage);
        
        fetch('/change-language', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ language: selectedLanguage })
        })
        .then(response => {
            if (response.ok) location.reload();
        })
        .catch(error => console.error('Language change error:', error));
    });

    // Prevent interaction with background when overlay is open
    document.addEventListener('touchmove', function(e) {
        if (document.querySelector('.mobile-menu-overlay.active, .mobile-search-overlay.active')) {
            e.preventDefault();
        }
    }, { passive: false });
});
