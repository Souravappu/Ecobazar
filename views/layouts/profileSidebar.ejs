<div class="col-span-3 lg:col-span-3 bg-white rounded-2xl shadow-2xl p-6">
    <div class="flex items-center space-x-4 mb-8">
        <div class="w-14 h-14 rounded-full bg-green-500 flex items-center justify-center text-white text-2xl border-4 border-green-200">
            <i class="fas fa-user"></i>
        </div>
        <div>
            <h3 class="font-bold text-lg"><%= user.fname %> <%= user.lname %></h3>
            <p class="text-sm text-gray-500">User</p>
        </div>
    </div>
    <nav class="space-y-3">
        <a href="/profile" 
           class="nav-item flex items-center p-4 rounded-lg space-x-4 <%= currentPage === 'profile' ? 'active' : '' %> hover:bg-green-50 transition-all duration-300">
            <i class="fas fa-home w-5 text-center"></i>
            <span class="font-medium">Dashboard</span>
        </a>
        <a href="/orders" 
           class="nav-item flex items-center p-4 rounded-lg space-x-4 <%= currentPage === 'orders' ? 'active' : '' %> hover:bg-green-50 transition-all duration-300">
            <i class="fas fa-shopping-basket w-5 text-center"></i>
            <span class="font-medium">Orders</span>
        </a>
        <a href="/wishlist" 
           class="nav-item flex items-center p-4 rounded-lg space-x-4 <%= currentPage === 'wishlist' ? 'active' : '' %> hover:bg-green-50 transition-all duration-300">
            <i class="fas fa-heart w-5 text-center"></i>
            <span class="font-medium">Wishlist</span>
        </a>
        <a href="/wallet" 
           class="nav-item flex items-center p-4 rounded-lg space-x-4 <%= currentPage === 'wallet' ? 'active' : '' %> hover:bg-green-50 transition-all duration-300">
            <i class="fas fa-wallet w-5 text-center"></i>
            <span class="font-medium">Wallet</span>
        </a>
        <a href="/address" 
           class="nav-item flex items-center p-4 rounded-lg space-x-4 <%= currentPage === 'address' ? 'active' : '' %> hover:bg-green-50 transition-all duration-300">
            <i class="fas fa-map-marker-alt w-5 text-center"></i>
            <span class="font-medium">Address</span>
        </a>
        <form action="/logout" method="POST" class="mt-4">
            <button type="submit" 
                    class="nav-item flex items-center p-4 rounded-lg space-x-4 text-red-500 w-full hover:bg-red-50 transition-all duration-300">
                <i class="fas fa-sign-out-alt w-5 text-center"></i>
                <span class="font-medium">Log Out</span>
            </button>
        </form>
    </nav>
</div>
